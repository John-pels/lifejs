{
  "permissions": {
    "allow": [
      "Bash(ls:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh issue view:*)",
      "Bash(bun:*)",
      "mcp__ide__getDiagnostics",
      "Bash(cp:*)",
      "Bash(git checkout:*)",
      "Bash(npx tsc:*)",
      "Bash(cat:*)",
      "WebSearch",
      "Bash(curl:*)",
      "WebFetch(domain:github.com)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npx ultracite fix"
          }
        ]
      }
    ]
  }
}
