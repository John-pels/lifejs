{
  "name": "life-monorepo",
  "private": true,
  "scripts": {
    "bump": "ncu -i --workspaces --configFilePath /bin/null",
    "clear": "find . -type d \\( -name 'node_modules' -o -name '.turbo' -o -name '.next' -o -name 'dist' -o -name '.life' -o -name 'tsconfig.tsbuildinfo' \\) -prune -exec rm -rf {} +",
    "lint": "bunx biome lint",
    "lint:full": "biome lint --max-diagnostics 1000",
    "format": "ultracite format",
    "types": "turbo run types --concurrency=100% --log-order=stream --filter=!playground",
    "build": "turbo run build --concurrency=100% --log-order=stream --filter=!playground",
    "dev": "turbo run dev --concurrency=100%",
    "deploy": "bun run build && changeset publish",
    "change": "changeset add",
    "version": "changeset version",
    "test": "turbo run test --concurrency=100% --log-order=stream --filter=!playground"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "^1.3.0",
    "npm-check-updates": "^19.0.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "ultracite": "^5.6.2"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@dotenvx/dotenvx": "^1.51.0",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/context-zone": "^2.1.0",
    "ua-parser-js": "^2.0.6"
  },
  "patchedDependencies": {
    "ink@6.3.1": "patches/ink@6.3.1.patch"
  }
}
